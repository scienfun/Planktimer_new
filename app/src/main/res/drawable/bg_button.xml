<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/button_released" android:width="2dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/button_pressed" android:width="2dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

</selector>